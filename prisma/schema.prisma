generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artist {
  id         String  @id
  name       String
  instrument String?
  Song       Song[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  published Boolean  @default(false)
  authorId  Int?
  User      User?    @relation(fields: [authorId], references: [id])
}

model Song {
  id       String  @id
  title    String
  length   Int?
  album    String
  genre    String
  artistId String?
  Artist   Artist? @relation(fields: [artistId], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  Post  Post[]
}
