{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
      "baseUrl": ".",
      "paths" : {
          "@/*": ["./src/*"],
          "@components/*" : ["./src/components/*"],
          "@layouts/*": ["./src/layouts/*"],
          "@styles/*" : ["./src/styles/*"],
          "@scripts/*" : ["./src/scripts/*"],
          "@tutorial/*": ["./src/components/tutorial/*"]
      },
      "strictNullChecks": true,
      "allowJs": true,
    },
    "exclude": [
      "archive/"
    ]
  }