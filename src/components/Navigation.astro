---
import "@styles/declarations.less";
import NavButton from "./NavButton.astro";

const {props} = Astro.props;

let width = props.width;
let backgroundColor = props.backgroundColor;
let darkBackgroundColor = props.darkBackgroundColor;
let justifyContent = props.justifyContent;

---
<nav class="navigaion">
    {props.routes.map((route) => (
        <NavButton {...route} />
    ))}
</nav>

<style lang="less" define:vars={{width, backgroundColor, darkBackgroundColor, justifyContent}}>
    nav {
        background-color: var(--backgroundColor);
        width: var(--width);
        height: 4rem;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: var(--justifyContent);
        align-content: center;
        gap: 0.1rem;
    }

    :global(.dark) {
        nav {
            background-color: var(--darkBackgroundColor);
        }
    }
</style>