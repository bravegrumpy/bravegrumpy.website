---
import { ViewTransitions } from 'astro:transitions';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '@styles/global.less';

const {pageTitle} = Astro.props;
---
<html lang="en-us">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="BraveGrumpy Content">
        <meta name="author" content="Brave Grumpy">
        <meta name="keywords" content="Art, Writing, Photography, Personal Website">
        <link rel="icon" href="favicon.png" />
        <link rel="sitemap" href="/sitemap-index.html" />
        <title>{pageTitle} | BraveGrumpy</title>
        <ViewTransitions />
    </head>
    <body>
       <Header />
       <h1 transition:animate="slide">{pageTitle}</h1>
       <slot></slot>
       <Footer />
       <script>
        import '../scripts/menu.js';
       </script>
    </body>
</html>