---
import HeadersLayout from "@layouts/HeadersLayout.astro";

const pageTitle = "Skeuomorphic 3D Plastic Design";
const pageSubtitle = "Skeuomorphic 3D Plastic Design";
const slug = 5;
---
<HeadersLayout pageTitle={pageTitle} pageSubtitle={pageSubtitle} slug={slug}>
    <style>
        /* Container to hold all elements */
        .container {
            position: relative;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding-top: 50px; /* Add space to avoid overlap with top navigation */
        }

        /* Top bar containing the navigation buttons */
        .top-bar {
            display: flex;
            justify-content: space-around;
            background-color: #d8b8ff; /* Light purple background */
            padding: 10px;
            border-radius: 8px;
        }

        .top-bar .nav-item {
            padding: 10px 20px;
            font-weight: bold;
            border: 2px solid #6c3483; /* Darker purple border */
            background-color: #fff; /* White background */
            color: #6c3483;
            border-radius: 8px;
        }

        /* Div to hold content on top of two other divs with skeuomorphic design */
        .middle-box {
            position: absolute;
            top: calc(100% - 80px);
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            border-radius: 20px;
            background: linear-gradient(145deg, #f0f0f0, #c8c8c8); /* Plastic-like gradient */
            box-shadow: 
                8px 8px 16px #b0b0b0,  /* Dark shadow for depth */
                -8px -8px 16px #ffffff; /* Light shadow for 3D effect */
            border: 1px solid #e0e0e0; /* Subtle border for a solid look */
            color: #333;
            font-family: Arial, sans-serif;
            text-align: center;
            box-sizing: border-box;
        }

        .middle-box h2 {
            font-weight: bold;
            font-size: 1.8em;
            margin: 0 0 10px 0;
            color: #333;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.7); /* Raised text look */
        }

        .middle-box p {
            font-size: 1em;
            line-height: 1.4em;
            color: #555;
        }

        /* Bottom bar containing the lower navigation buttons */
        .bottom-bar {
            display: flex;
            justify-content: space-around;
            background-color: #6c3483; /* Darker purple background */
            padding: 10px;
            border-radius: 8px;
            margin-top: 100px;
        }

        .bottom-bar .nav-item {
            padding: 10px 20px;
            font-weight: bold;
            border: 2px solid #fff;
            background-color: #fff; /* White background */
            color: #6c3483;
            border-radius: 8px;
        }
    </style>
    <div class="container">
        <div class="top-bar">
            <div class="nav-item">Home</div>
            <div class="nav-item">Writing</div>
            <div class="nav-item">Links</div>
            <div class="nav-item">Archive</div>
            <div class="nav-item">Contact</div>
        </div>

        <div class="middle-box">
            <h2>Home</h2>
            <p>Welcome to the homepage. Click on links to explore.</p>
        </div>

        <div class="bottom-bar">
            <div class="nav-item">Home</div>
            <div class="nav-item">Writing</div>
            <div class="nav-item">Links</div>
            <div class="nav-item">Archive</div>
        </div>
    </div>
</HeadersLayout>