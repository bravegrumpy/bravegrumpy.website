---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Logo from "@components/Logo.svelte";
import Navigation from "@components/Navigation.astro";
import PageTite from "@components/PageTitle.svelte";
import { colors } from "@/scripts/data.js";

const navigation = {
    routes: [{
        href: "#",
        text: "Nav Button",
        className: "default",
    }],
};

navigation["backgroundColor"] = colors.bravegrumpy.logoPurple;
navigation["darkBackgroundColor"] = colors.bravegrumpy.accent2a;
navigation["width"] = "500px";

const color1 = colors.bravegrumpy.accent1a;

const pageTitle = "Creating Components";
---

<BaseLayout pageTitle={pageTitle}>
    <p>This is a list of various components that I've made. I'm using it to be able to visually see the changes I'm making.</p>

    <style define:vars{{ color1 }}>
        /* Container to hold all elements */
        .container {
            position: relative;
            width: 100%;
            margin: 0 auto;
            padding-top: 50px; /* Add space to avoid overlap with top navigation */
            background-color: green;
        }

        /* Top bar containing the navigation buttons */
        .top-bar {
            display: flex;
            justify-content: space-around;
            background-color: #d8b8ff; /* Light purple background */
            padding: 10px;
            border-radius: 8px;
        }

        .top-bar .nav-item {
            padding: 10px 20px;
            font-weight: bold;
            border: 2px solid #6c3483; /* Darker purple border */
            background-color: #fff; /* White background */
            color: #6c3483;
            border-radius: 8px;
        }

        /* Div to hold content on top of two other divs */
        .middle-box {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translate(-50%, -100%);
            padding: 20px;
            background-color: #e6e6fa; /* Soft lavender background */
            color: #333;
            border: 2px solid #6c3483; /* Darker purple border */
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Bottom bar containing the lower navigation buttons */
        .bottom-bar {
            display: flex;
            justify-content: space-around;
            background-color: #6c3483; /* Darker purple background */
            padding: 10px;
            border-radius: 8px;
            margin-top: 50px;
        }

        .bottom-bar .nav-item {
            padding: 10px 20px;
            font-weight: bold;
            border: 2px solid #fff;
            background-color: #fff; /* White background */
            color: #6c3483;
            border-radius: 8px;
        }
    </style>
    <div class="container">
        <div class="top-bar">
            <div class="nav-item">Home</div>
            <div class="nav-item">Writing</div>
            <div class="nav-item">Links</div>
            <div class="nav-item">Archive</div>
            <div class="nav-item">Contact</div>
        </div>
        
        <div class="middle-box">
            <h2>Home</h2>
            <p>Welcome to the homepage. Click on links to explore.</p>
        </div>

        <div class="bottom-bar">
            <div class="nav-item">Home</div>
            <div class="nav-item">Writing</div>
            <div class="nav-item">Links</div>
            <div class="nav-item">Archive</div>
        </div>
    </div>

</BaseLayout>